@model e_commerce_project.viewModels.account.signINvm

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-lg-flex half">
    <div class="bg order-1 order-md-2" style="background-image: url('/signInAndSignUpTemplate/images/bg_1.jpg');"></div>
    <div class="contents order-2 order-md-1">

      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-7">
            <h3>Login to <strong>Furniture Home</strong></h3>
            <form asp-action="Login">
           
            <div class="form-group last mb-3" >
                <label asp-for="UserNAme" class="control-label"></label>
				<input asp-for="UserNAme" class="form-control">
				<span asp-validation-for="UserNAme" class="text-danger"></span>
			</div>

              <div class="form-group last mb-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
              </div>
              
            @*  <div class="d-flex mb-5 align-items-center">
                <label class="control control--checkbox mb-0"><span class="caption">Remember me</span>
                  <input type="checkbox" checked="checked"/>
                  <div class="control__indicator"></div>
                </label>
                <span class="ml-auto"><a href="#" class="forgot-pass">Forgot Password</a></span> 
              </div>*@

              <input type="submit" value="Log In" style="background-color:#D19C97;"  class="btn btn-block">

              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </form>
          </div>
        </div>
      </div>
    </div>

    
  </div>
    


@section MyStyles{
    @Html.Partial("~/wwwroot/signInAndSignUpTemplate/_styles.cshtml")
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}