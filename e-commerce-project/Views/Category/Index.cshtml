
@{
    ViewData["Title"] = "Index";
    Layout = "_Admin";
}
@model List<Category>;
<div style="padding:30px 0;text-align:right;">
    <a asp-action="New" asp-controller="Category" style="background-color:#1f2937;text-decoration:none;color:white;padding:15px 30px">Add</a>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">name</th>
      <th scope="col">info</th>
    </tr>
  </thead>
  <tbody>
      @{
          foreach (Category cat in @Model)
          {
            <tr>
              <td>@cat.Name</td>
              <td>@cat.Description</td>
              <td> <img style="width:100px" src="/categoriesImages/@cat.img"> </td>
              <td>
              <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" >
                 <i class="fa-solid fa-pen-to-square"></i>
              </a>
              </td>
              <td>
              <a asp-controller="Category" asp-action="delete" asp-route-id="@cat.Id" >
                <i class="fa-solid fa-trash-can"></i>
              </a>
              </td>
            </tr>          
          }
      }
  </tbody>
</table>

